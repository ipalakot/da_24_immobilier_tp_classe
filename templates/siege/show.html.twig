			</tbody>
		</table>

		<a href="{{ path('siege_index') }}" class="btn btn-secondary">Liste de sieges</a>

		<a href="{{ path('siege_edition', {'id': siege.id}) }}" class="btn btn-secondary">Modifier</a>

